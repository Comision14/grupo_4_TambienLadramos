<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head', {
        title : 'Register'
    }) %>

<body class="home-body">

    <%- include('../partials/header') %>

<main> 
    <div>
        <form class="register_form" action="" method="POST" enctype="multipart/form-data">
            <h2>Registrarse</h2>
            <div>
                <input class="register_datos" type="text" id="name" name="name" placeholder="Nombre completo">
            </div>
            <div>
                <input class="register_datos" type="email" id="mail" name="mail" placeholder="E-mail">
            </div>
            <div>
                <input class="register_datos" type="password" id="password" name="password" placeholder="Contraseña">
            </div>
            <div>
                <input class="register_datos" type="password" id="password2" name="password2" placeholder="Confirmar contraseña">
            </div>
            <div>
                <input class="register_datos" type="file" id="image" name="image" accept="image/*">
            </div>
            <div>
                <a href=""> Términos y condiciones</a>
            </div>
            <div>
                <input class="bottons" type="submit" value="Registrar">
                <p><a href="login">¿Ya tengo cuenta?</p></a>
            </div>
            
            
            
            
            
            
        </form>
    </div>
  
    
</main>  

    <%- include('../partials/footer') %>

</body>
</html>