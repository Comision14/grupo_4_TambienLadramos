<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head'); %>
<body>
    
<%- include('partials/header'); %> 

<main>
    <div>
        <h2>Resultado de la búsqueda: "<%= noSpaceKeyword %>"</h2>
        <% if (products.length > 0) { %>
            <% products.forEach(({id,name,price,category,image}) => { %>
                <div>
                    <div>
                        <div>
                            <img src="/images/Alimento-balanceado/<%= image %>" alt="" style="width: 150px; display: flex; align-self: center;">
                        </div>
                        <div>
                            <h5><%= name %></h5>
                            <h5>$<%= price %></h5>
                            <% namesCategories.forEach(element => { %>
                                <p><%= element.id === category ? element.name : null %></p>
                            <% }) %>
                            <a href="/products/detail/<%= id %>">Ver más</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% }else{ %>
            <div>
                No se encontraron resultados
            </div>
        <% } %>
      
      

    <section class="searchResult"> 
        <h1>Resultado de la búsqueda: "<%= noSpaceKeyword %>"</h1>
        <nav class="searchResult-productos">
            <% if (products.length > 0) { %>
            <% products.forEach(({id, name, image, price, description, category}) => { %> 
                <article>
                    <a href="/products/productDetail/<%= id %>">
                        <div>
                            <img src="/images/Alimento-balanceado/<%= image %>" alt="">     
                        </div>
                        <p><%= name %></p>
                        <p>$<%= price %></p>
                    </a>
                    
                    <form action="" method="get">
                        <input type="button" value="agregar a carrito">
                    </form>
                </article> 
        <% }) %>
        <% }else{ %>
                <div>
                    No se encontraron resultados
                </div>
            <% } %>
        </nav>
    </section>
    
</main>


<%- include('partials/footer'); %> 

</body>
</html>