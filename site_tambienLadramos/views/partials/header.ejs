<header>

    <nav class="home__header__ig">
        <div class="home__header__ig__perro">
            <img src="/images/perro-informatico.png" alt="">
            <i class="fa-brands fa-instagram"></i>
            <span>#tambi√©nLadramos</span>
        </div>
        <div class="home__header__ig__number">
            <i class="fa-solid fa-phone"></i>
            <span>0800-222-800</span>
        </div> 
    </nav>
    <nav class="home__header__contenedor">
        <div class="home__header__div__logo">
                <div class="home__header__logo">
                    <a href="/"></a>
                </div>
        </div>
        <div class="home__header__div1">   
            <div>
                <a id="question" href="/products/info"><i class="fa-solid fa-circle-question"></i></a>  
            </div>      
            <div>
                <ul class="menu">
                    <li><a class="menuItem" href="/">Home</a></li>
                    <li><a class="menuItem" href="/products">Products</a></li>
                    <li><a class="menuItem" href="/services">Services</a></li>
                  </ul>
                  <button class="hamburger">
                    <i class="menuIcon fa-solid fa-bars"></i>
                    <i class="closeIcon fa-solid fa-x"></i>
                  </button>
            </div>
        </div>

        <div class="home__header__div2">
            <% if (!locals.userLogin) { %>
                <div>
                    <a id="user" href="/users/login"><i class="fa-solid fa-user"></i></a>
                </div>
            <% }else{ %>
                <div>
                    <a id="user" href="/users/profile"><i class="fa-solid fa-user"><span id="userName"><%= locals.userLogin.name %></span></i><a> 
                </div>
                <div>
                    <a id="logout" href="/users/logout"><i class="fa-solid fa-right-from-bracket"></i></a>   
                </div>
            <% } %>
                <div>
                    <a id="cart" href="/products/productCart"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
            </div>
            <div class="home__header__div3">
                <form action="/products/searchResult" method="GET">
                    <div>
                        <input type="text" class="" name="keyword" id="keyword" placeholder="Search..."/>
                        <button class="" type="submit" name="keyword">
                            <i id="search__icon" class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>
                
            </div>
    </nav>
    <script src="/javascript/hamburger-btn.js"></script>
</header>