<!DOCTYPE html>
<html lang="en" class="body_productos">

    <%- include('./partials/head') %>
    
<body class="body_productos">

    <%- include('./partials/header') %>
    
<main>
    
    <section class="productos"> 
        <h1>Productos</h1>
            <div class="product-mas-relevante">
                <p>Más relevante</p>   
            </div>

        <nav class="products-productos">
            
            <% product.forEach(({id, title, price, images}) => { %> 
                <article>
                    <a href="/products/productDetail/<%= id %>">
                        <% images.forEach(({name}) => { %>
                            <div>
                                <img src="/images/Alimento-balanceado/<%= name %>" alt="">     
                            </div>
                        <% }) %>
                            
                        <p><%= title %></p>
                        <p>$<%= price %></p>
                    </a>
                    
                    <form action="" method="get">
                        <input type="button" value="agregar a carrito">
                    </form>
                </article> 
           <% }) %>

        </nav>

    </section>

    <section>
        <article class="producto_pag_1">
           <i class="fa-solid fa-circle-arrow-left"></i>
                <p>Pág 1</p>
            <i class="fa-solid fa-circle-arrow-right"></i>    
        </article>
    </section>

</main>

    <%- include('./partials/footer') %>

</body>
</html>