<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head',{
        title : 'Nuevo producto'
    })  %> 


<body class="home-body">

    <%- include('./partials/header') %>

    <main class="login-main"> 

        <section>
            <div>
                <h2>Agregar Producto</h2>
            </div>

        
            <div class="form__productAdd" >
                <form method="POST" action="">
                    <article style="display: flex; justify-content: center; flex-direction: column; border: 1px solid black; text-align: center;">
                        <div style="text-align: center; display: flex; flex-direction: row; flex-wrap: wrap; margin: 10px auto; justify-content:center; width: 10vw;">
                            <label for="name">Nombre del producto</label>
                            <input type="text" id="name" name="name" required>
                            
                        </div>
                        <div style="text-align: center; display: flex; flex-direction: row; flex-wrap: wrap; margin: 10px auto; justify-content:center; width: 10vw;">
                            <label for="price">Precio</label>
                            <input type="number" id="price" name="price" required>
                        </div>
                        <div style="text-align: center; display: flex; flex-direction: row; flex-wrap: wrap; margin: 10px auto; justify-content:center; width: 10vw;">
                            <label for="category">Categorías</label>
                            <select <%= locals.errors && errors.category ? 'is-invalid' : null%> name="category" id="category" required>
                                <option value="" hidden selected>Selecciona la categoría</option>
                              <% categories.forEach(category => { %>
                                <option <%= locals.old && old.category && +old.category === +category.id ? 'selected' : null %>  value="<%= category.id %>"><%= category.name %></option>
                              <% }) %>
                            </select>
                            <span><%= locals.errors && errors.category ? errors.category.msg : null%></span>
                        </div>                
                </article>

                <div>
                    <button type="submit">Guardar</button>
                    
                    <button type="reset">Limpiar</button>
                </div>
                    
                        
                </form>
            </div>
            
        </section>
    </main>

    
    <%- include('./partials/footer') %>

</body>
</html>







    
    
</body>
</html>